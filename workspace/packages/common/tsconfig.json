{
  "extends": "@tsconfig/strictest",
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "disableSourceOfProjectReferenceRedirect": true,

    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "declarationMap": true,    
    "declaration": true,
    "noEmit": false,
    "composite": true,
    "incremental": true,

    "outDir": "dist",
    "rootDir": "src",
  }
}
