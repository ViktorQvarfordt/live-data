{
  "extends": "@tsconfig/next-strictest",
  "compilerOptions": {
    "disableSourceOfProjectReferenceRedirect": true,

    "module": "esnext",
    "moduleResolution": "nodenext",

    "declaration": true,
    "noEmit": false,
    "composite": true,
    "incremental": true,

    "rootDir": "./",

    "paths": {
      "@workspace/client/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "references": [
    { "path": "../../packages/common" },
    { "path": "../../packages/live-provider" }
  ]
}
